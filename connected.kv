

<Connected>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'data/images/snap.jpg'
                size: self.size

    BoxLayout:
        orientation: 'vertical'

        Camera:
            id: camera
            resolution: (640, 480)
            play: True

        Button:
            text: "Tomar foto"
            size_hint_y: None
            height: '48dp'
            background_color: (0.0, 1.5, 15.0, 1.0)
            on_press: root.capture()

        Button:
            text: "Cerrar sesion"
            font_size: 24
            size_hint_y: None
            width: '48dp'
            height: '48dp'
            background_color: (10.0, 0.0, 0.0, 1.0)
            on_press: root.disconnect()

#:include connected.kv

<Login>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'data/images/snap.jpg'
                size: self.size

        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            pos_hint: {'top': 1}
            height: 44
            Image:
                size_hint: None, None
                size: 24, 24
                source: 'data/logo/snap.png'
            Label:
                height: 24
                text_size: self.width, None
                color: (0, 0, 0, .8)
                text: 'SnapChat Clone'
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        

        Label:
            text: 'Bienvenido!'
            font_size: 32
            color: (0, 0, 0, .8)

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Username'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20
                color: (0, 0, 0, .8)

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20
                color: (0, 0, 0, .8)

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28
        
        Button:
            text: 'Iniciar Sesion'
            font_size: 24
            background_color: (2.7, 0.0, 1.0, 1.0)
            on_press: root.do_login(login.text, password.text)
        Button:
            text: 'Registrarme'
            font_size: 24
            background_color: (0.0, 1.5, 15.0, 1.0)
            on_press: root.do_login(login.text, password.text)

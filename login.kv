#:include connected.kv


<Login>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size

    BoxLayout:
        id: login_layout
        orientation: 'vertical'

        BoxLayout:
            size_hint: (1, 5)
            orientation: 'vertical'

            Label:
                text: 'Inicio de Sesion'
                font_size: 30
                font_name: 'media/Fonts/Khula-ExtraBold.ttf'
                halign: 'center'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                color: (0, 0, 0, .8)

            Label:
                text: 'Username'
                font_size: 18
                font_name: 'media/Fonts/Khula-SemiBold.ttf'
                halign: 'center'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                color: (0, 0, 0, .8)

            TextInput:
                id: login
                multiline:False
                halign: 'center'
                font_size: 28
                background_color: (0, 0, 0, 0.1)
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                font_name: 'media/Fonts/Khula-Light.ttf'

            Label:
                text: 'Password'
                halign: 'center'
                font_size: 18
                font_name: 'media/Fonts/Khula-SemiBold.ttf'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                color: (0, 0, 0, .8)

            TextInput:
                id: password
                halign: 'center'
                multiline:False
                background_color: (0, 0, 0, 0.1)
                password:True
                font_size: 28
                size_hint: (.9, 1)
                font_name: 'media/Fonts/Khula-Light.ttf'
                pos_hint: {'x':0.05, 'y':1}
                password: True

        AnchorLayout:
            size_hint: (.5, .5)

        Button:
            text: 'Entrar'
            font_size: 24
            background_color: (2.7, 0.0, 1.0, 1.0)
            size_hint: (.9, 1)
            pos_hint: {'x':0.05, 'y':2}
            font_name: 'media/Fonts/Khula-Bold.ttf'
            on_press: root.do_login(login.text, password.text)

        Button:
            text: 'Regresar'
            font_size: 20
            color: (0, 0, 0, 1)
            background_color: (1.0, 1.0, 15.0, 0)
            size_hint: (.9, 1)
            pos_hint: {'x':0.05, 'y':1}
            font_name: 'media/Fonts/Khula-Bold.ttf'
            on_press: root.regresar()

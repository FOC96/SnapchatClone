#:include login.kv


<Inicio>:
    FloatLayout:
        canvas:
            Color:
                rgb: 0.98, 1, 0

        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            pos_hint: {'top': 1}
            height: 44
            Image:
                size_hint: None, None
                size: 24, 24
                source: 'media/logo.png'
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        background_color: (0.98, 1, 1, 1)

        Button:
            text: 'Log In'
            font_size: 24
            background_color: (2.7, 0.0, 1.0, 1.0)
            on_press: root.do_inicio()

        Button:
            text: 'Go back'
            font_size: 24
            background_color: (0.0, 1.5, 15.0, 1.0)
            on_press: root.do_inicio()

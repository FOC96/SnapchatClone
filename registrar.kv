#:include connected.kv
#:include inicio.kv
#:include login.kv


<Registrar>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size

    BoxLayout:
        id: login_layout
        orientation: 'vertical'

        BoxLayout:
            size_hint: (1, 5)
            orientation: 'vertical'

            Label:
                text: 'Sign Up'
                font_size: 30
                font_name: 'media/Fonts/Khula-ExtraBold.ttf'
                halign: 'center'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                color: (0, 0, 0, .8)

            Label:
                text: 'Complete name'
                font_size: 18
                font_name: 'media/Fonts/Khula-SemiBold.ttf'
                halign: 'center'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                color: (0, 0, 0, .8)

            TextInput:
                id: userName
                multiline:False
                halign: 'center'
                font_size: 28
                background_color: (0, 0, 0, 0.1)
                size_hint: (.9, 1)
                font_name: 'media/Fonts/Khula-Light.ttf'
                pos_hint: {'x':0.05, 'y':1}

            Label:
                text: 'Username'
                font_size: 18
                font_name: 'media/Fonts/Khula-SemiBold.ttf'
                halign: 'center'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                color: (0, 0, 0, .8)

            TextInput:
                id: userNickname
                multiline:False
                halign: 'center'
                font_size: 28
                background_color: (0, 0, 0, 0.1)
                size_hint: (.9, 1)
                font_name: 'media/Fonts/Khula-Light.ttf'
                pos_hint: {'x':0.05, 'y':1}

            Label:
                text: 'Password'
                halign: 'center'
                font_size: 18
                font_name: 'media/Fonts/Khula-SemiBold.ttf'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                color: (0, 0, 0, .8)

            TextInput:
                id: userPassword
                halign: 'center'
                multiline:False
                background_color: (0, 0, 0, 0.1)
                password:True
                font_size: 28
                font_name: 'media/Fonts/Khula-Light.ttf'
                size_hint: (.9, 1)
                pos_hint: {'x':0.05, 'y':1}
                password: True

        AnchorLayout:
            size_hint: (.5, .5)

        Button:
            text: 'Create user'
            font_size: 24
            background_color: (2.7, 0.0, 1.0, 1.0)
            size_hint: (.9, 1)
            pos_hint: {'x':0.05, 'y':2}
            font_name: 'media/Fonts/Khula-Bold.ttf'
            on_press: root.do_registrar(userName.text, userNickname.text, userPassword.text)

        Button:
            text: 'Go back'
            font_size: 20
            color: (0, 0, 0, 1)
            background_color: (1.0, 1.0, 15.0, 0)
            size_hint: (.9, 1)
            pos_hint: {'x':0.05, 'y':1}
            font_name: 'media/Fonts/Khula-Bold.ttf'
            on_press: root.regresar1()
